%section
  .page-header
    %h1
      = Meal.model_name.human(count: 2)
      = link_to "<i class='icon-plus'></i> #{t('helpers.links.add')}".html_safe, new_meal_path, class: 'btn'

%table.table.table-striped
  %thead
    %tr
      %th= Meal.human_attribute_name :datetime
      %th= Meal.human_attribute_name :where
      %th= Meal.human_attribute_name :kind
      %th= Meal.human_attribute_name :description
      %th

  %tbody
    - @meals.each do |meal|
      %tr
        %td= meal.datetime
        %td=t meal.where
        %td=t meal.kind
        %td= meal.description
        %td
          = link_to t('show'), meal
          \|
          = link_to t('edit'), edit_meal_path(meal)
          \|
          = link_to t('destroy'), meal, :method => :delete, :data => { :confirm => 'Are you sure?' }


