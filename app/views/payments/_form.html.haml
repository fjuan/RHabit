= simple_form_for(@payment) do |f|
  = f.error_notification

  .inputs
    = f.input :datetime
    = f.input :category, collection: @payment_categories
    = f.input :method, collection: @payment_methods
    = f.input :shared
    = f.input :description
    = f.input :amount

  .actions
    = f.button :submit
