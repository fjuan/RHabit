- if controller_name != 'sessions'
  %p= link_to t("devise.links.sign_in"), new_session_path(resource_name)
  
- if devise_mapping.registerable? && controller_name != 'registrations'
  %p= link_to t("devise.links.sign_up"), new_registration_path(resource_name)

- if devise_mapping.recoverable? && controller_name != 'passwords'
  %p= link_to t("devise.links.forgot_password"), new_password_path(resource_name)
