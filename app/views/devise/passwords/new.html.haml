%section
  .page-header
    %h1= t("devise.passwords.forgot_password")

%p= t("devise.passwords.reset_password_instructions")

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|

  .form-inputs
    = f.input :email

  .form-actions
    = f.button :submit, t("devise.buttons.send_me_reset_password_instructions")

= render "devise/shared/links"
